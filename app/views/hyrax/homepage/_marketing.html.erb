<section class="image-masthead">
     <div class="splash-text">
    <div class="splash-container">
      <div class="container">
        <div class="col-sm-6">
          <div class="splash-text--medium">
            <p>Chimera Text goes here</p>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="splash-text--medium">
            <!--Placeholder for Browse + Deposit/Share your work buttons-->
              <%= link_to "<i class=\"glyphicon glyphicon-search\"></i> #{t('hyrax.browse')}".html_safe, main_app.search_catalog_path, class: "btn btn-lg", id: "browse_link" %>

              <% if @presenter.display_share_button? %>
                <div class="home_share_work row">
                  <div class="col-sm-12 text-center">
                    <% if signed_in? %>
                      <% if @presenter.create_many_work_types? %>
                        <%= link_to '#',
                          class: "btn btn-lg",
                          data: { behavior: 'select-work', target: '#worktypes-to-create', 'create-type' => 'single' } do %>
                          <i class="glyphicon glyphicon-upload"></i> <%= t('hyrax.share_button') %>
                        <% end %>
                      <% else # simple link to the first work type %>
                        <%= link_to new_polymorphic_path([main_app, @presenter.first_work_type]),
                              class: 'btn btn-lg' do %>
                          <i class="glyphicon glyphicon-upload"></i> <%= t('hyrax.share_button') %>
                        <% end %>
                      <% end %>
                    <% else %>
                      <%= link_to hyrax.my_works_path,
                        class: "btn btn-lg" do %>
                        <i class="glyphicon glyphicon-upload"></i> <%= t('hyrax.share_button') %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
              <!-- End Share buttons -->
          </div>
        </div>
      </div>
    </div>
    </div>
</section>